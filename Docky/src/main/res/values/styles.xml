<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="Dock">
        <item name="android:orientation">vertical</item>
        <item name="android:choiceMode">none</item>
        <item name="android:layout_width">@dimen/dock_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dock_padding_left</item>
        <item name="android:paddingTop">@dimen/dock_padding_top</item>
        <item name="android:paddingRight">@dimen/dock_padding_right</item>
        <item name="android:paddingBottom">@dimen/dock_padding_bottom</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">15dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="Dock.Black">
        <item name="android:background">@drawable/dock_background_black_rounded</item>
    </style>

    <style name="Dock.White">
        <item name="android:background">@drawable/dock_background_white_rounded</item>
    </style>

</resources>
