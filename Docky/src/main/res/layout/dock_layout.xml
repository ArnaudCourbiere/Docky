<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dock_layout"
    android:layout_width="@dimen/dock_layout_width"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#555">

    <View
        android:id="@+id/drag_handle"
        android:layout_width="@dimen/drag_handle_width"
        android:layout_height="match_parent"
        android:background="@color/blue">
    </View>

    <ListView
        android:id="@+id/dock"
        android:orientation="vertical"
        android:layout_width="@dimen/dock_width"
        android:layout_height="match_parent"
        android:choiceMode="none"
        android:divider="@color/dock_seperarator"
        android:dividerHeight="1px"
        android:background="@color/dock_background">
    </ListView>

</LinearLayout>