<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dock_layout"
    android:layout_width="@dimen/dock_layout_width"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:id="@+id/drag_handle"
        android:layout_width="@dimen/drag_handle_width"
        android:layout_height="match_parent">
    </View>

    <ListView
        android:id="@+id/dock"
        android:orientation="vertical"
        android:layout_width="@dimen/dock_width"
        android:layout_height="match_parent"
        android:choiceMode="none"
        android:background="@drawable/dock_background_black_straight"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp">
    </ListView>

</LinearLayout>